# VoiceLink Core Environment Variables

# Audio Storage
AUDIO_STORAGE_PATH=./data/audio

# HuggingFace Token for pyannote.audio (get from https://huggingface.co/pyannote/speaker-diarization)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# OpenAI API Key for LLM analysis
OPENAI_API_KEY=your_openai_api_key_here

# Database
DATABASE_URL=sqlite:///./data/voicelink.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Whisper Model (tiny, base, small, medium, large)
WHISPER_MODEL=base

# Audio Processing
MAX_AUDIO_FILE_SIZE=100

# Logging
LOG_LEVEL=INFO
